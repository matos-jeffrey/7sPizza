<div class="glow"><center><h1 class="mainTitle">Welcome to 7's Pizza!</h1></center></div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/images/hawaiian.png" class="carouselImage" alt="Hawaiian" height="175" width="300">
            <div class="carouselText">Hawaiian Pizza <br /> $12.99</div>
        </div>

        <div class="item">
            <img src="~/images/meatlover.png" class="carouselImage" alt="Meat Lover's" height="175" width="300">
            <div class="carouselText">Meat Lover's Pizza <br /> $14.99</div>
        </div>

        <div class="item">
            <img src="~/images/sevens.png" class="carouselImage" alt="Seven's Pizza" height="175" width="300">
            <div class="carouselText">Seven's Pizza <br /> $10.99</div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
